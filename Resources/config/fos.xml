<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mop_avocado.fos.user_manager.class">Mop\AvocadoBundle\FOSUser\Model\UserManager</parameter>
    </parameters>

    <services>
        <service id="mop_avocado.fos.user_manager" class="%mop_avocado.fos.user_manager.class%" public="false">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="fos_user.util.username_canonicalizer" />
            <argument type="service" id="fos_user.util.email_canonicalizer" />
            <argument type="service" id="mop_avocado.fos.connection"/>
            <argument>%mop_avocado.fos.collection%</argument>
            <argument>%fos_user.model.user.class%</argument>
        </service>
    </services>
</container>
